@model Library.Models.comment

@{
    ViewBag.Title = "Comment Details";
}


<h2>Details</h2>


<div class="card o-hidden border-0 shadow-lg">
    <div class="card-header">
        <div class="font-weight-bold text-gray-800 text-center h3">
             Comment 
            <i class="fas fa-comments"></i>
        </div>
    </div>
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-8">
                <div class="p-5">
                    <table class="table table-striped">
                        <tr class="form-group row">
                            <th class="card-title font-weight-bolder badge bg-primary text-lg ">
                                @Html.DisplayNameFor(model => model.comments)
                            </th>
                            <th class="col-md-10 mb-3 mb-sm-0 text-body text-info ">
                                @Html.DisplayFor(model => model.comments)
                            </th>
                        </tr>

                        <tr class="form-group row">
                            <td class="card-title font-weight-bolder badge bg-secondary text-lg">
                                @Html.DisplayNameFor(model => model.comment_data)
                            </td>
                            <td class="col-md-10 mb-3 mb-sm-0 text-info">
                                @Html.DisplayFor(model => model.comment_data)
                            </td>
                        </tr>

                        <tr class="form-group row">
                            <td class="card-title font-weight-bolder badge bg-success text-lg">
                                @Html.DisplayNameFor(model => model.book.title)
                            </td>
                            <td class="col-md-10 mb-3 mb-sm-0 text-info">
                                @Html.DisplayFor(model => model.book.title)

                            </td>
                        </tr>
                        <tr class="form-group row">
                            <td class="card-title font-weight-bolder badge bg-danger text-lg">
                                @Html.DisplayNameFor(model => model.user.first_name)
                            </td>
                            <td class="col-md-10 mb-3 mb-sm-0 text-info">
                                @Html.DisplayFor(model => model.user.first_name)
                            </td>
                        </tr>     
                    </table>
                </div>
                <hr>
            </div>
        </div>
    </div>
    @Html.ActionLink("Edit The Comment", "Edit", new { id = Model.comment_id }, new { @class = " btn btn-info text-white" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = " btn btn-danger text-white" })
</div>