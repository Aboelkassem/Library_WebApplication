@model Library.Models.book

@{
    ViewBag.Title = Model.title;
}

<h2>Details</h2>


<div class="card o-hidden border-0 shadow-lg">
    <div class="card-header">
        <div class="font-weight-bold text-gray-800 text-center h3">
            @Html.DisplayFor(model => model.title)
            <i class="fas fa-book"></i>
        </div>
    </div>
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-8">
                <div class="p-5">
                    <table class="table table-striped">
                            <tr class="form-group row">
                                <th class="card-title font-weight-bolder badge bg-primary text-lg ">
                                    @Html.DisplayNameFor(model => model.edition)
                                </th>
                                <th class="col-md-10 mb-3 mb-sm-0 text-body text-info ">
                                    @Html.DisplayFor(model => model.edition)<sup>Th</sup>
                                </th>
                            </tr>

                            <tr class="form-group row">
                                <td class="card-title font-weight-bolder badge bg-secondary text-lg">
                                    @Html.DisplayNameFor(model => model.price)
                                </td>
                                <td class="col-md-10 mb-3 mb-sm-0 text-info">
                                    @Html.DisplayFor(model => model.price)
                                </td>
                            </tr>

                            <tr class="form-group row">
                                <td class="card-title font-weight-bolder badge bg-success text-lg">
                                    @Html.DisplayNameFor(model => model.pages)
                                </td>
                                <td class="col-md-10 mb-3 mb-sm-0 text-info">
                                    @Html.DisplayFor(model => model.pages)
                                </td>
                            </tr>
                            <tr class="form-group row">
                                <td class="card-title font-weight-bolder badge bg-danger text-lg">
                                    @Html.DisplayNameFor(model => model.availabilty)
                                </td>
                                <td class="col-md-10 mb-3 mb-sm-0 text-info">
                                    @if (Model.availabilty == 1)
                                    {
                                        <span>Yes</span>
                                    }
                                    else
                                    {
                                        <span>No</span>
                                    }
                                </td>
                            </tr>
                            <tr class="form-group row">
                                <td class="card-title font-weight-bolder text-lg text-danger">
                                    @Html.DisplayNameFor(model => model.add_date)
                                </td>
                                <td class="col-md-10 mb-3 mb-sm-0 text-black-50">
                                    @Html.DisplayFor(model => model.add_date)
                                </td>
                            </tr>
                            <tr class="form-group row">
                                <td class="card-title font-weight-bolder text-lg text-danger">
                                    @Html.DisplayNameFor(model => model.rate)
                                </td>
                                <td class="col-md-10 mb-3 mb-sm-0 text-black-50">
                                    @if (Model.rate == 1)
                                    {

                                        <span class="fas fa-star checked"></span>
                                        <span class="far fa-star"></span>
                                        <span class="far fa-star"></span>
                                        <span class="far fa-star"></span>
                                        <span class="far fa-star"></span>
                                    }
                                    @if (Model.rate == 2)
                                    {

                                        <span class="fas fa-star checked"></span>
                                        <span class="fas fa-star checked"></span>
                                        <span class="fas fa-star checked"></span>
                                        <span class="far fa-star"></span>
                                        <span class="far fa-star"></span>
                                    }
                                    @if (Model.rate == 3)
                                    {

                                        <span class="fas fa-star checked"></span>
                                        <span class="fas fa-star checked"></span>
                                        <span class="fas fa-star checked"></span>
                                        <span class="fas fa-star checked"></span>
                                        <span class="far fa-star"></span>
                                    }
                                    @if (Model.rate == 4)
                                    {

                                        <span class="far fa-star checked"></span>
                                        <span class="fas fa-star checked"></span>
                                        <span class="fas fa-star checked"></span>
                                        <span class="fas fa-star checked"></span>
                                        <span class="fas fa-star checked"></span>
                                    }
                                </td>
                            </tr>

                            <tr class="form-group row">
                                <td class="card-title font-weight-bolder text-lg text-danger">
                                    @Html.DisplayNameFor(model => model.tags)
                                </td>
                                <td class="col-md-10 mb-3 mb-sm-0 text-black-50">
                                    @Html.DisplayFor(model => model.tags)
                                </td>
                            </tr>

                            <tr class="form-group row">
                                <td class="card-title font-weight-bolder text-lg text-danger">
                                    Author
                                </td>
                                <td class="col-md-10 mb-3 text-black-50">
                                    @Html.DisplayFor(model => model.author.first_name)
                                </td>
                            </tr>

                            <tr class="form-group row">
                                <td class="card-title font-weight-bolder text-lg text-danger">
                                    Publication
                                </td>
                                <td class="col-md-10 mb-3 mb-sm-0 text-black-50">
                                    @if (Model.publication_id != null)
                                    {
                                        @Html.DisplayFor(model => model.publication.name)
                                    }
                                    else
                                    {
                                        <text>Unknown</text>
                                    }
                                </td>
                            </tr>

                            <tr class="form-group row">
                                <td class="card-title font-weight-bolder text-lg text-danger">
                                    @Html.DisplayNameFor(model => model.subcategory.subcategory_name)
                                </td>
                                <td class="col-md-5 mb-3 mb-sm-0 col-sm-10 text-black-50">
                                    @Html.DisplayFor(model => model.subcategory.subcategory_name)
                                </td>
                            </tr>

                            <tr class="form-group row">
                                <td class="card-title font-weight-bolder text-lg text-danger">
                                    Added By
                                </td>
                                <td class="col-md-5 mb-3 mb-sm-0 col-sm-10 text-black-50">
                                    @Html.DisplayFor(model => model.user.first_name)
                                </td>
                            </tr>
                            <tr class="form-group row">
                                <td class="card-title font-weight-bolder text-lg text-danger">
                                    @Html.DisplayNameFor(model => model.description)
                                </td>
                                <td class="col-md-10 mb-3 mb-sm-0 text-black-50">
                                    @Html.DisplayFor(model => model.description)
                                </td>
                            </tr>
                     </table>
                </div>
             <hr>
            </div>
            <div class="col-lg-4">
                <div class="pt-5">
                    <!-- Illustrations -->
                    <div class="m-0">
                        <img class="img-fluid img-thumbnail img px-3 px-sm-4 mt-3 mb-4 hidden-sm" style="width: 43rem;height: 27rem;margin-left:-300px;" src="@Url.Content(Model.photo)" alt="Alt_@Model.photo">
                        <img class="img-fluid px-3 px-sm-4 mt-3 mb-4 hidden-lg" style="width: 43rem;height: 27rem;" src="@Url.Content(Model.photo)" alt="Alt_@Model.photo">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="@Url.Content(Model.File)" class="btn btn-primary custom-control btn"><i class="fas fa-file-download"></i> Download The Book</a>
    @Html.ActionLink("Edit The Book", "Edit", new { id = Model.book_id }, new { @class = " btn btn-info text-white" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = " btn btn-danger text-white" })
</div>