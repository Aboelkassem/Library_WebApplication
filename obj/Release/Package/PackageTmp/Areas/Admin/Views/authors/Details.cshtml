@model Library.Models.author

@{
    ViewBag.Title = Model.first_name +" "+ Model.last_name;
}

<h2>Details</h2>

<div class="card o-hidden border-0 shadow-lg">
    <div class="card-header">
        <div class="font-weight-bold text-gray-800 text-center h3">
            @Html.DisplayFor(model => model.first_name) @Html.DisplayFor(model => model.last_name)
            <i class="fas fa-user-friends"></i>
        </div>
    </div>
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-8">
                <div class="p-5">
                    <table class="table table-striped">
                        <tr class="form-group row">
                            <th class="card-title font-weight-bolder badge bg-primary text-lg ">
                                @Html.DisplayNameFor(model => model.nationality)
                            </th>
                            <th class="col-md-10 mb-3 mb-sm-0 text-body text-info ">
                                @Html.DisplayFor(model => model.nationality)
                            </th>
                        </tr>

                        <tr class="form-group row">
                            <td class="card-title font-weight-bolder badge bg-secondary text-lg">
                                @Html.DisplayNameFor(model => model.description)
                            </td>
                            <td class="col-md-10 mb-3 mb-sm-0 text-info">
                                @Html.DisplayFor(model => model.description)
                            </td>
                        </tr>
                    </table>
                </div>
                <hr>
            </div>
            <div class="col-lg-4">
                <div class="pt-5">
                    <!-- Illustrations -->
                    <div class="m-0">
                        <img class="img-fluid img-thumbnail img px-3 px-sm-4 mt-3 mb-4 hidden-sm" style="width: 43rem;height: 27rem;margin-left:-300px;" src="@Url.Content(Model.photo)" alt="Alt_@Model.photo">
                        <img class="img-fluid px-3 px-sm-4 mt-3 mb-4 hidden-lg" style="width: 43rem;height: 27rem;" src="@Url.Content(Model.photo)" alt="Alt_@Model.photo">
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.ActionLink("Edit The Author", "Edit", new { id = Model.author_id }, new { @class = " btn btn-info text-white" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = " btn btn-danger text-white" })
