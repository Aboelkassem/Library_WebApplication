@model Library.Models.category

@{
    ViewBag.Title = Model.category_name;
}

<h2>Details</h2>

<div class="card o-hidden border-0 shadow-lg">
    <div class="card-header">
        <div class="font-weight-bold text-gray-800 text-center h3">
            @Html.DisplayFor(model => model.category_name)
            <i class="fas fa-tag"></i>
        </div>
    </div>
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-8">
                <div class="p-5">
                    <table class="table table-striped">
                        <tr class="form-group row">
                            <th class="card-title font-weight-bolder badge bg-primary text-lg ">
                                @Html.DisplayNameFor(model => model.description)
                            </th>
                            <th class="col-md-10 mb-3 mb-sm-0 text-body text-info ">
                                @Html.DisplayFor(model => model.description)
                            </th>
                        </tr>
                    </table>
                <hr>
            </div>
        </div>
    </div>
    @Html.ActionLink("Edit The Category", "Edit", new { id = Model.category_id }, new { @class = " btn btn-info text-white" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = " btn btn-danger text-white" })
</div>