@model Library.Models.user

@{
    ViewBag.Title = "Edit Profile";
}

@using (Html.BeginForm("Edit_Profile","Manage",FormMethod.Post,new { enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="container emp-profile">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    <img src="@Url.Content(Model.photo)" alt="Alt_@Model.UserName" />
                    <div class="file btn btn-lg btn-primary">
                        Change Photo
                        <input type="file" name="uploadedUserImage" id="uploadedUserImage" />
                        @Html.ValidationMessageFor(m => m.photo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h5>
                        @Model.UserName
                    </h5>
                    <h6>
                        @Model.first_name @Model.last_name
                    </h6>
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Edit Info</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">

            </div>
            <div class="col-md-8">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>User name</label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>First Name</label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    @Html.EditorFor(m => m.first_name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.first_name, "", new { @class = "text-danger" })
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Last Name</label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    @Html.EditorFor(m => m.last_name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.last_name, "", new { @class = "text-danger" })
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Email</label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Gender</label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    @Html.DropDownList("gender", new List<SelectListItem>
                                    {
                                        new SelectListItem {Text = "Male",Value = "Male"},
                                        new SelectListItem {Text = "Female",Value = "Female"}
                                    }, "Select Gender", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.gender, "", new { @class = "text-danger" })
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-info" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}