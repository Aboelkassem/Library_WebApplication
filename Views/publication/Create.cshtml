@model Library.Models.publication

@{
    ViewBag.Title = "Create Publication";
}

<h2>Create</h2>


    <div class="card o-hidden border-0 shadow-lg MyBody">
        <div class="card-header h1 font-weight-bold">
            <div class="font-weight-bold text-gray-800 text-center h3">
                <h1>Add New Publication To Library <i class="fab fa-galactic-republic"></i></h1>
            </div>
        </div>
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-7">
                    @using (Html.BeginForm("Create", "publication", FormMethod.Post, new { enctype = "multipart/form-data", @class = "user" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="p-5">
                            <div class="form-group row">
                                @Html.ValidationSummary(true, "", new { @class = "invalid-feedback text-danger" })
                                <label class="col-sm-2 col-form-label form-control-plaintext h1 font-weight-bold"><h4>Publication Name</h4></label>
                                <div class="col-sm-10 mb-3 mb-sm-0">
                                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control " } })
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "invalid-feedback text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label form-control-plaintext h1 font-weight-bold"><h4>Address of Publication</h4></label>
                                <div class="col-md-10 mb-3 mb-sm-0">
                                    @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.address, "", new { @class = "invalid-feedback text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label form-control-plaintext h1 font-weight-bold"><h4>Publication Contact</h4></label>
                                <div class="col-md-10 mb-3 mb-sm-0">
                                    @Html.EditorFor(model => model.contact, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.contact, "", new { @class = "invalid-feedback text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label form-control-plaintext h1 font-weight-bold"><h4>Publication Logo</h4></label>
                                <div class="col-md-5 mb-3 mb-sm-0 col-sm-10">
                                    @Html.TextBoxFor(model => model.uploadedPublicationLogo, new { type = "file", @class = "form-control-file custom-file-input", data_val_extension = "Select Only Images files", data_val_extension_extension = "jpg,png,jpeg,gif", required = true })
                                    <label class="custom-file-label" for="photo">Choose file...</label>
                                    @Html.ValidationMessageFor(model => model.uploadedPublicationLogo, "", new { @class = "invalid-feedback text-danger" })
                                </div>
                            </div>
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-primary btn-user btn-block" />
                            </div>
                            <hr>
                        </div>
                    }
                    </div>
                <div class="col-lg-5">
                    <div class="pt-5">
                        <!-- Illustrations -->
                        <div class="m-0">
                            <img class="hidden-sm hidden-xs px-3 px-sm-4 mt-3 mb-4" src="~/Content/img/undraw_printing_invoices_5r4r.svg" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

